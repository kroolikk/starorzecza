<h2>
  <%= @gallery.name %>
</h2>

<div class="gallery">
  <p>
    <% @gallery.photos.each do |photo| %>
      <%= link_to( image_tag(photo.photo.small.url, :alt => photo.title, :title => photo.title), photo.photo.url, :class => 'fancybox', 'data-fancybox-group' => "gallery", :title => "Tytuł: #{photo.title}<br> Autor zdjęcia: #{photo.description}" ) %>
      <% end %>
  </p>
  <%= link_to '« Powrót', front_galleries_url %>
</div>