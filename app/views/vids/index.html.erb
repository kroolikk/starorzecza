<div>
  <h1>Video</h1>
  <%= link_to "Nowe video", new_vid_path %>
  <br/>
  <br/>
  <br/>
  
  <table width="100%">
    <tr>
      <th width="60%">Tytuł</th>
      <th width="20%">Data publikacji</th>
      <th width="20%">Akcje</th>
    </tr>
    
    <% @vids.each do |vid| %>
      <tr>
	<td><%= vid.title %></td>
	<td><%= vid.created_at.strftime("%d-%m-%Y %H:%M:%S") %></td>
	<td><%= link_to 'Edytuj', edit_vid_path(vid) %> | <%= link_to 'Usuń', vid, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>
