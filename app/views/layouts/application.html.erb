<head>
  <meta charset="UTF-8" />
  <%= csrf_meta_tags %>
  
  <%= stylesheet_link_tag "style.css" %>
  <%= javascript_include_tag "jquery-1.7.2.min.js" %>
</head>

<body>
  
  
  <p>Layout</p>
  Nawigacja<br>
  <%= link_to "SG", root_url %>
  <% @pages.each do |p| %>
  <%= link_to p.title, front_page_url(p.label) %>
  <% end %>
  <%= link_to "Video", front_videos_url %>
  <%= link_to "Galeria", front_galleries_url %>
  <%= link_to "Kontakt", contact_url %>
  <br><br><br>
  <div>
    <%= yield %>
  </div>
</body>
</html>
<% end %>
