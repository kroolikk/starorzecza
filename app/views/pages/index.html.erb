<div>
  <h1>Strony</h1>
  <%= link_to "Nowa strona", new_page_path %>
  <br/>
  <br/>
  <br/>
  
  <table width="100%">
    <tr>
      <th width="20%">Link</th>            
      <th width="5%">Prior</th>
      <th width="35%">Tytuł</th>
      <th width="20%">Data publikacji</th>
      <th width="20%">Akcje</th>
    </tr>
    
    <% @pages.each do |page| %>
      <tr>
        <td>/<%= page.label %></td>
        <td><%= (page.label != 'kontakt') && (page.label != 'o-projekcie') && (page.label != 'english') ? page.priority : '---' %></td>
        <td><%= page.title %></td>
        <td><%= page.created_at.strftime("%d-%m-%Y %H:%M:%S") %></td>
        <td><%= link_to 'Edytuj', edit_page_path(page) %> | <%= link_to 'Usuń', page, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>
